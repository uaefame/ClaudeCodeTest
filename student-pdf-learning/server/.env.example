# Server Configuration
PORT=3000
NODE_ENV=production

# MongoDB (Optional - app works without it using memory storage)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/masark

# Google OAuth (Optional - app works without authentication)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://www.masark.me/api/auth/google/callback

# Session/JWT Secrets (REQUIRED - generate random strings)
SESSION_SECRET=your_random_session_secret_here
JWT_SECRET=your_random_jwt_secret_here

# Client URL for CORS
CLIENT_URL=https://www.masark.me

# Gemini API Key (REQUIRED)
GEMINI_API_KEY=your_gemini_api_key

# Google Gemini API Key
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# MongoDB Connection
# Local: mongodb://localhost:27017/masark
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/masark
MONGODB_URI=mongodb://localhost:27017/masark

# Google OAuth
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5001/api/auth/google/callback

# Session/JWT Secrets (generate random secure strings)
SESSION_SECRET=change_this_to_a_random_secure_string
JWT_SECRET=change_this_to_another_random_secure_string

# Environment
NODE_ENV=development
CLIENT_URL=http://localhost:3000
